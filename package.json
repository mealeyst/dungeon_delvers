{
  "name": "dungeon_delvers",
  "version": "0.0.1",
  "description": " Javascript RPG Using Babylon",
  "main": "index.js",
  "scripts": {
    "build": "babel src --out-dir lib --extensions '.ts,.tsx'",
    "start": "npm run start:client & npm run start:server",
    "start:client": "./src/client/node_modules/.bin/webpack serve --open --config ./src/client/webpack.config.js",
    "start:server": "npm run watch:server & node_modules/.bin/nodemon ./src/server/dist/index.bundle.js",
    "build:server": "./src/server/node_modules/.bin/webpack --config ./src/server/webpack.config.js --mode=production",
    "watch:server": "./src/server/node_modules/.bin/webpack --config ./src/server/webpack.config.js --mode=development -w",
    "test": "echo \"Error: no test specified\" && exit 1",
    "tsc": "tsc",
    "watch": "babel --watch src ---out-dir lib --extensions '.ts,.tsx'",
    "lerna": "./node_modules/.bin/lerna",
    "lerna:create": "npm run lerna -- create"
  },
  "keywords": [
    "Babylon",
    "React",
    "Javascript",
    "RPG"
  ],
  "author": "Shawn Mealey",
  "license": "ISC",
  "dependencies": {
    "@babylonjs/core": "4.2.0",
    "@babylonjs/inspector": "4.2.0",
    "@babylonjs/materials": "4.2.1",
    "@leodeslf/perlin-noise": "^1.1.2",
    "@types/express": "^4.17.13",
    "babylonjs-loaders": "^4.2.1",
    "dat.gui": "0.7.7",
    "simplex-noise": "^3.0.1",
    "ts-node": "^10.4.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.5",
    "@babel/plugin-transform-typescript": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-react": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "babel-loader": "^8.2.3",
    "eslint": "^8.6.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "html-webpack-plugin": "^5.5.0",
    "lerna": "^4.0.0",
    "nodemon": "^2.0.15",
    "prettier": "2.5.1",
    "proxy-middleware": "^0.15.0",
    "typescript": "^4.5.4",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.3"
  }
}
